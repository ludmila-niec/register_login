<div class="row my-5">
    <div class="col-md-6 m-auto">
        <div class="card card-body border-primary">
            <h3 class="m-3 text-center">
                <i class="fas fa-user-plus"></i>Crear Cuenta
            </h3>
            <%- include('partials/messages') %>
            <form action="/users/register" method="POST">
                <div class="form-group">
                    <label for="name" class="font-weight-bold">Nombre</label>
                    <input
                        type="text"
                        name="name"
                        id="name"
                        class="form-control"
                        placeholder="Ingresa tu Nombre"
                        required
                        value="<%= typeof name != 'undefined' ? name : '' %>"
                    />
                </div>
                <div class="form-group">
                    <label for="email" class="font-weight-bold">Email</label>
                    <input
                        type="email"
                        name="email"
                        id="email"
                        class="form-control"
                        placeholder="Ingresa tu Email"
                        required
                        value="<%= typeof email != 'undefined' ? email : '' %>"
                    />
                </div>
                <div class="form-group">
                    <label for="password" class="font-weight-bold"
                        >Contrase単a</label
                    >
                    <input
                        type="password"
                        name="password"
                        id="password"
                        class="form-control"
                        placeholder="Ingresa tu contrase単a"
                        required
                        value="<%= typeof password != 'undefined' ? password : '' %>"
                    />
                </div>
                <div class="form-group">
                    <label for="password2" class="font-weight-bold"
                        >Confirmar contrase単a</label
                    >
                    <input
                        type="password"
                        name="password2"
                        id="password2"
                        class="form-control"
                        placeholder="Confirma tu contrase単a"
                        required
                        value="<%= typeof password2 != 'undefined' ? password2 : '' %>"
                    />
                </div>
                <button class="btn btn-primary btn-lg btn-block mt-5">
                    Registrar
                </button>
            </form>
            <div class="text-center">
                <p class="lead mt-5">Ya estas registrado?</p>
                <a class="text-secondary" href="/users/login">Iniciar Sesion</a>
            </div>
        </div>
    </div>
</div>
